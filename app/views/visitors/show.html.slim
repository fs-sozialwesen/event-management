        = teacher.profession
.nutzenklammer
  .nutzenueber Datum
  .nutzentext
    table cellspacing="0"
      tbody
        - @seminar.dates.each do |date|
          tr
            td
              - if date.is_a? Range
                => ldate date.first
                | -
                =< ldate date.last
              - else
                = ldate date
.nutzenklammer
  .nutzenueber Zeit
  .nutzentext
    - @seminar.events.map {|e| e.time }.uniq.each do |time|
      = time
