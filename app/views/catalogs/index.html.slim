- page_title_for @catalogs, :title
.page-header
  .buttons = new_link new_catalog_path
  h2 = title_for @catalogs, :title

.table-responsive
  table.standard-table.table-clickable
    thead
      tr
        th
        th = Catalog.human_attribute_name(:title)
        th = Catalog.human_attribute_name(:year)
        th = Catalog.human_attribute_name(:seminars)
        th = Catalog.human_attribute_name(:categories)
    tbody
      - @catalogs.each do |catalog|
        tr data = {url: url_for(catalog)} class = (catalog.published ? 'success' : 'warning')
          td = current_catalog == catalog ? 'âœ“' : '-'
          td = catalog.title
          td = catalog.year
          td = catalog.seminars.count
          td = catalog.categories.count
